<%- include("includes/top"); %>
<%- include("includes/head", {customStyle: "recommend"}); %>
<%- include("includes/header") %>
<%- include("includes/aside") %>
<%- include("includes/main"); %>
<h1>Share your favorite restaurant!</h1>
<form action="" method="post">
    <div class="form-control">
        <label for="name">Restaurant name</label>
        <input id="name" name="name" required type="text"/>
    </div>
    <div class="form-control">
        <label for="address">Address</label>
        <input id="address" name="address" required type="text"/>
    </div>
    <div class="form-control">
        <label for="cuisine">Type of cuisine</label>
        <input
                id="cuisine"
                name="cuisine"
                placeholder="e.g. Mexican"
                required
                type="text"
        />
    </div>
    <div class="form-control">
        <label for="website">Restaurant website</label>
        <input id="website" name="website" type="url"/>
    </div>
    <div class="form-control">
        <label for="description">Why do you recommend it?</label>
        <textarea
                id="description"
                name="description"
                required
                rows="5"
        ></textarea>
    </div>
    <button>Share Restaurant</button>
</form>
<%- include("includes/bottom"); %>